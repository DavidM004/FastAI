---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
---

<div
  class="fixed inset-0 bg-secondary/30 flex items-center justify-center z-50"
  role="dialog"
  aria-modal="true"
>
  <div class="bg-bg rounded-lg w-full max-w-[425px] mx-4">
    {/* Header */}
    <div class="flex items-center justify-between p-4 border-b">
      <h2 class="text-xl font-semibold">Личный кабинет</h2>
      <button
        @click="$store.account.value = false"
        class="p-1 hover:bg-gray-100 rounded-md"
        aria-label="Close modal"
      >
        <Icon name="lucide:x" class="h-4 w-4" />
      </button>
    </div>

    {/* Content */}
    <div class="p-4 space-y-6">
      {/* Email Section */}
      <div class="bg-gray-50 rounded-lg p-3">
        <div class="flex items-center justify-between">
          <div class="space-y-1">
            <p class="text-sm text-gray-500">Вы зашли под почтой:</p>
            <p class="font-medium">newstarslab@gmail.com</p>
          </div>
          <button
            class="px-3 py-1.5 text-sm bg-red-500 text-white rounded-md hover:bg-red-600"
          >
            Выйти из аккаунта
          </button>
        </div>
      </div>

      {/* Plan Section */}
      <div class="bg-gray-50 rounded-lg p-3">
        <div class="flex items-center justify-between mb-3">
          <div>
            <p class="text-sm text-gray-500">Текущий тариф</p>
            <p class="font-medium">Пробный</p>
          </div>
          <button class="text-blue-600 hover:underline">Подробнее</button>
        </div>
        <button class="w-full py-2 bg-gray-100 rounded-md hover:bg-gray-200"
          >Выбрать тариф</button
        >
      </div>

      {/* Promo Code */}
      <div class="flex gap-2">
        <input
          type="text"
          placeholder="Промокод"
          class="flex-1 px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
        <button class="p-2 border rounded-md hover:bg-gray-50">
          <Icon name="lucide:chevron-right" />
        </button>
      </div>

      {/* Theme Selection */}
      <!-- <div class="grid grid-cols-3 gap-2">
        {
          ["Светлая", "Тёмная", "Системная"].map((theme) => (
            <div class="flex flex-col items-center gap-2 bg-gray-50 rounded-lg p-3">
              <p class="text-xs text-gray-500">Тема</p>
              <p class="text-sm font-medium">{theme}</p>
            </div>
          ))
        }
      </div> -->

      {/* Navigation Links */}
      <div class="space-y-2">
        {
          [
            "Реферальная система",
            "Приватность и безопасность",
          ].map((item) => (
            <button class="w-full px-3 py-2 text-left bg-white rounded-md flex items-center justify-between group">
              {item}
              <Icon name="lucide:chevron-right" />
            </button>
          ))
        }
      </div>

      {/* QR Code Section */}
      <div class="bg-gray-50 rounded-lg p-4 flex items-center gap-4">
        <p class="text-sm flex-1">
          Скачайте приложение, чтобы пользоваться нейросетями в телефоне
        </p>
        <div
          class="h-24 w-24 bg-white p-2 rounded-lg flex items-center justify-center"
        >
          <div class="w-full h-full bg-black/80 rounded"></div>
        </div>
      </div>
    </div>
  </div>
</div>
